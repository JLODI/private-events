<div id ="event-show">
    <h1 id="event-title"><%= @event.name %><br></h3>
    <h4 id="host-name">Date: <%= @event.date %></h4> 
    <h4 id="host-name">Hosted by PLACEHOLDER</h4>
    <% if @event.image_url.present?%>
        <div id="image"> 
            <img src='<%= @event.image_url %>'  width="400"> 
        </div>
        <% end %>
    <p id="desc">
        <%= @event.desc %><br>
    </p>
</div>
<div>
<h2 id="event-attendees">Who's going:</h2>
    <% @event.attendees.each do |attendee| %>
        <ul>
            <li><%= attendee.email %></li>
        </ul>
    <% end %>
</div>


<% unless @event.attendees.include?(current_user) %>
        <%= form_with model: @event_ticket do |form| %>
            <%= form.hidden_field :attendee_id %>
            <%= form.hidden_field :attended_event_id %>
            <%= form.submit value: "Attend the event!" %>
        <% end %>
<% else %>
    <div>
        You are attending the event.
    </div>
<% end %>